# Azure Configuration - Values will be populated from Terraform outputs
AZURE_KEY_VAULT_URL=<your-key-vault-url>
AZURE_OPENAI_ENDPOINT=<your-openai-endpoint>
AZURE_COGNITIVE_SEARCH_ENDPOINT=<your-cognitive-search-endpoint>
AZURE_TENANT_ID=<your-tenant-id>
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=<your-document-intelligence-endpoint>
AZURE_DOCUMENT_INTELLIGENCE_API_KEY=<your-document-intelligence-api-key>
AZURE_SEARCH_API_KEY=<your-search-api-key> 

# Optional - For local development (fill these manually)
AZURE_CLIENT_ID=<your-client-id>
AZURE_CLIENT_SECRET=<your-client-secret>

# Other settings
DJANGO_ENVIRONMENT=development
DJANGO_SECRET_KEY=<your-secret-key>

# Database settings (optional for development)
DB_NAME=konveyor
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Azure services (for production)
AZURE_OPENAI_API_KEY=<your-api-key>
AZURE_OPENAI_CHAT_DEPLOYMENT=<your-chat-deployment-name>
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=<your-embedding-deployment-name>

# Azure Cognitive Search
AZURE_SEARCH_INDEX_NAME=konveyor-documents

# Bot Framework / Slack
MICROSOFT_APP_ID=<your-app-id>
MICROSOFT_APP_PASSWORD=<your-app-password>
SLACK_BOT_TOKEN = <your-bot-token>
SLACK_APP_TOKEN = <your-app-token>
SLACK_SIGNING_SECRET = <your-signing-secret>
SLACK_CLIENT_ID = <your-client-id>
SLACK_CLIENT_SECRET = <your-client-secret>
